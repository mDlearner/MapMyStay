<% layout('/layouts/boilerplate.ejs')%>

    <body>
        <div class="row mt-5 justify-content-center">
            <div class="card col-10 p-0 border-0 shadow-lg">
                <div class="row g-0 align-items-center">
                    <div class="col-md-6">
                        <img src="<%=list.image.url%>" class="img-fluid rounded-start w-100 h-100"
                            style="object-fit:cover; min-height:70vh;" alt="img">
                    </div>
                    <div
                        class="col-md-6 d-flex flex-column justify-content-center align-items-start p-5 bg-light h-100">
                        <h1 class="display-4 fw-bold mb-3">
                            <%=list.title %>
                        </h1>
                        <p class="lead mb-4">
                            <%=list.description %>
                        </p>
                        <p class="mb-2"><span class="fw-bold">Price:</span> &#8377;<%=list.price.toLocaleString("en-IN")
                                %>/Night</p>
                        <p class="mb-2"><span class="fw-bold">Location:</span>
                            <%=list.location %>
                        </p>
                        <p class="mb-4"><span class="fw-bold">Contact:</span>
                            <%=list.contact %>
                                @<%=list.owner.username %>
                        </p>
                        <% if (currentUser && currentUser._id.equals(list.owner._id)) { %>
                            <div class="btns d-flex gap-2">
                                <form action="/listings/<%=list._id %>/edit" method="get">
                                    <button type="submit" class="btn btn-dark">Edit</button>
                                </form>
                                <form action="/listings/<%=list._id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                            <%} %>
                    </div>
                </div>
            </div>

        </div>
        <% if(currentUser) { %>
            <div class="row">
                <div class="col-md-6">
                    <h3 class="offset-2 mt-3">Leave a Reviews</h3>
                    <form action="/listings/<%= list._id%>/review" method="post" novalidate class="needs-validation">
                        <div class="mb-3 col-6 offset-2">
                            <label for="rate" class="form-label">Rate</label>
                            <fieldset class="starability-slot">
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rate]" value="0"
                                    checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rate]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rate]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rate]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rate]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rate]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>

                            <div class="invalid-feedback">
                                Please give rating.
                            </div>

                        </div>
                        <div class="mb-3 col-6 offset-2">
                            <label for="comment" class="form-label">Comment</label>
                            <textarea name="review[comment]" id="comment" cols="30" rows="10" placeholder="comment"
                                class="col-6 form-control" required></textarea>
                            <div class="invalid-feedback">
                                Please leave a comment.
                            </div>
                            <button type="submit" class="btn btn-primary mt-3">Submit</button>
                        </div>

                    </form>
                </div>
            </div>
            <% } %>
                <hr>

                <div class="row">
                    <% for(let review of list.reviews){ %>
                        <div class="card col-5 m-3  p-0 border-0 shadow-lg">
                            <div class="card-body">
                                <h5 class="card-title">@<%= review.owner.username %> &nbsp;<span
                                            class="badge bg-primary ">
                                            <%=review.rate%> â˜…
                                        </span></h5>
                                <p class="card-text">
                                    <%=review.comment%>
                                </p>
                                <small class="text-muted">
                                    <%= new Date(review.createdAt).toLocaleDateString() %>
                                </small>
                                <% if(currentUser && review.owner &&
                                    review.owner._id.toString()===currentUser._id.toString()){ %>
                                    <form action="/listings/<%=list._id%>/review/<%=review._id%>?_method=DELETE"
                                        method="post">
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </form>

                                    <% } %>
                            </div>
                        </div>
                        <% } %>
                </div>
    </body>