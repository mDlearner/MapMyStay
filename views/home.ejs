<% layout('/layouts/boilerplate.ejs')%>

    <body>
        <h1>Welcome to MapMyStay</h1>
        <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-1 g-4">
            <% for( list of lists) { %>
                <a href="/listings/<%=list._id%>" class="card-hm">
                    <div class="card listing-card col " >
                        <img src="<%= list.image.url%>" class="card-img-top" style="height: 20rem;" alt="img">
                         <div class="card-img-overlay img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                               <b> <%= list.title %></b> <br>
                               &#8377;<%=list.price.toLocaleString("en-IN") %>/Night <br>
                                <%= list.location %> <br>
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>
    </body>