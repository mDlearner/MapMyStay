<% layout('/layouts/boilerplate.ejs')%>

<body>
    <div class="row mt-5 justify-content-center">
        <div class="card col-10 p-0 border-0 shadow-lg position-relative" style="min-height:70vh; overflow:hidden;">
            <!-- Background image -->
            <div style="position:absolute; top:0; left:0; width:100%; height:100%; z-index:1;">
                <img src="<%=list.image%>" alt="img" style="width:100%; height:100%; object-fit:cover; filter:brightness(0.5);">
            </div>
            <!-- Content overlay aligned right -->
            <div class="row g-0 align-items-center justify-content-end" style="min-height:70vh; position:relative; z-index:2;">
                <div class="col-md-6 d-flex flex-column justify-content-center align-items-end p-5 text-white">
                    <h1 class="display-4 fw-bold mb-3 text-end"> <%=list.title %> </h1>
                    <p class="lead mb-4 text-end">
                        <%=list.description %>
                    </p>
                    <p class="mb-2 text-end"><span class="fw-bold">Price:</span> &#8377;<%=list.price.toLocaleString("en-IN") %>/Night</p>
                    <p class="mb-2 text-end"><span class="fw-bold">Location:</span> <%=list.location %></p>
                    <p class="mb-4 text-end"><span class="fw-bold">Contact:</span> <%=list.contact %></p>
                    <div class="btns d-flex gap-2 justify-content-end">
                        <form action="/listings/<%=list._id %>/edit" method="get">
                            <button type="submit" class="btn btn-light">Edit</button>
                        </form>
                        <form action="/listings/<%=list._id %>?_method=DELETE" method="POST">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>