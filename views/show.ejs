<% layout('/layouts/boilerplate.ejs')%>

    <body>
        <div class="row mt-3">
            <div class="card col-8 offset-2">
                <h1>
                    <%=list.title %>
                </h1>
                <img src="<%=list.image%>" class="card-img-top show-img" alt="img">
                <div class="card-body">
                    <p class="card-text">
                        <b>
                            <%=list.title %>
                        </b> <br> <br>
                        <%=list.description %> <br><br>
                            Price: &#8377;<%=list.price.toLocaleString("en-IN") %>/Night <br><br>
                                Location: <%=list.location %> <br><br>
                                    Contact: <%=list.contact %> <br><br>
                    </p>
                </div>
                <div class="btns">
                    <div >
                    <form action="/listings/<%=list._id %>/edit " method="get"><button type="submit"
                            class="btn btn-dark ">Edit</button></form></div>
                    <div >
                        <form action="/listings/<%=list._id %>?_method=DELETE" method="POST"><button type="submit"
                            class="btn btn-danger">Delete</button></form></div>
                </div>
                </div>
            </div>
        </div>
    </body>

